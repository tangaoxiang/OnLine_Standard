@charset "utf-8";

body {
    background: #97adc4 url(../images/Login/login_bgcolor.png) repeat-x;
    width: 100%;
}

p {
    text-align: center;
    font-family: verdana;
    font-size: 80%;
}

.mid {
    position:absolute;
    top:50%;
    left:50%;
    margin:-245px 0 0 -512px;
    width: 1024px;
    height: 320px;
}

/*设为首页按钮*/
.home_button {
    width: 88px;
    display: block;
    height: 23px;
    background: url('../images/Login/LoginBtn.png') no-repeat;
    position: relative;
    bottom: -8px;
    cursor: pointer;
}
    /*设为首页按钮2*/
    .home_button:active {
        background: url('../images/Login/LoginBtn.png') no-repeat 0 -23px;
    }

