        $(function () {
            for (var i = 1; i < iWebPDF2015.CommandBars.Count; i++) {
                //alert(iWebPDF2015.CommandBars.Item(i).Name + i);			

                iWebPDF2015.CommandBars.Item(i).Visible = false;
            }
            iWebPDF2015.CommandBars.Item("DigitalSignature").Visible = true;
