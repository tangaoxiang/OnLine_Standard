/* @charset "utf-8";
基础设定 */

*{
	margin:0;
	padding:0;
	}
	
body{
	background: #f8f7e5 url(BackGround.jpg) center top;
    width: 100%;
	height:100%;
    display: table;
	text-align:center;
	}

#head{
	height:34px;
	width:100%;
	background:url(head.gif) repeat-x;
	}

#wrap{
	height:618px;
	width:890px;
	background: url(login_back.png) top center no-repeat;
	margin:0 auto;
	margin-top:160px;
	}
	
#login{
	width:370px;
	height:auto;
	float:left;
	text-align:left;
	padding:110px 0 0 50px;
	}
	
	
/* 深蓝色背景头部 */
.logo
{
	width: 400px;
	height: 27px;
	background: url(head_logo.gif) no-repeat top left;
	float: left;
	font-size: 14px;
	font-weight: bold;
	color: #fff;
	text-align: left;
	text-indent: 3em;
	line-height: 2.2em;
	letter-spacing: 1px;
	margin-left: 15px;
}

/* 登录框的样式 */
#login h4{
	font-size:14px;
	line-height:2em;
	}

#login input{
	height:24px;
	width:18em;
	border:1px #c3c3c3 solid;
	margin-bottom:18px;
	}
	
#login a {
	color:#0066cc;
	font-size:12px;
	font-weight:bold;
	letter-spacing:1px;
	}

.findpass{
	position:relative;
	left:-60px;
	top:-50px;
	}
	
#button
{
    margin-top: 30px;
    width: 100px;
}
	
.login_button
{
    display: block;
    width: 104px;
    height: 34px;
    background: url(login.gif) no-repeat;
    text-indent: -99999px;
    position: relative;
    left: 138px;
    top: -30px;
    cursor: pointer;
}
	
.login_button:active{
	background:url(login_hover.gif) no-repeat;
	}