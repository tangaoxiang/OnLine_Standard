        protected void Page_Load(object sender, EventArgs e)
        {
            Ajax.Utility.RegisterTypeForAjax(typeof(ArchiveList));
            Store = DNTRequest.GetQueryString("Store");
            SingleProjectID = DNTRequest.GetQueryString("SingleProjectID");
